<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewTriviaActivity"
    android:background="@color/bej_pergament">

    <TextView
        android:id="@+id/surugiu_george_alexandru_triviaScore_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trivia_scores"
        android:textStyle="bold"
        android:textColor="@color/rosu_inchis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        tools:layout_editor_absoluteY="14dp"
        android:textAllCaps="true" />

    <ListView
        android:id="@+id/surugiu_george_alexandru_triviaListView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/surugiu_george_alexandru_triviaScore_textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="100dp"/>

    <Button
        android:id="@+id/surugiu_george_alexandru_getScores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scores"
        android:backgroundTint="@color/rosu_inchis"
        android:textColor="@color/bej_pergament"
        app:layout_constraintTop_toBottomOf="@id/surugiu_george_alexandru_triviaListView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>